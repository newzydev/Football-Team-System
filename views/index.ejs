<%- include('partials/header') %>

<div class="container">
    <div class="table-wrapper">
        <% if (players.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-striped table-hover text-nowrap">
                    <thead class="thead-dark">
                        <tr>
                            <th class="text-center" scope="col">ID</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Position</th>
                            <th class="text-center" scope="col">Number</th>
                            <th scope="col">Username</th>
                            <th class="text-center" scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% players.forEach((player) => { %>
                            <tr>
                                <th class="text-center" scope="row"><%= player.id %></th>
                                <td><%= player.first_name %></td>
                                <td><%= player.last_name %></td>
                                <td><%= player.position %></td>
                                <td class="text-center"><%= player.number %></td>
                                <td><%= player.user_name %></td>
                                <td class="text-center">
                                    <a href="/edit/<%= player.id %>" class="btn btn-sm btn-success">Edit</a>
                                    <a href="/delete/<%= player.id %>" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p class="text-center">No players found. Go <a href="/add">here</a> to add players.</p>
        <% } %>
    </div>
</div>

</body>
</html>
